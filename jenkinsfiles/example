#!/bin/env groovy

pipeline {
  agent none

  environment {
    IMAGE = "liatrio/petclinic-tomcat"
  }

  stages {
    stage('Build') {
      agent any
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Package') {
      agent any
      steps {
        script {
          if ( env.BRANCH_NAME == 'master' ) {
            pom = readMavenPom file: 'pom.xml'
            TAG = pom.version
          } else {
            TAG = env.BRANCH_NAME
          }
          sh "docker build -t ${env.IMAGE}:${TAG} ."
        }
      }
    }
    stage('Deploy to Dev') {
      agent any
      steps {
        sh 'docker rm -f petclinic-tomcat-temp || true'
        sh "docker run -d -p 9966:8080 --name petclinic-tomcat-temp ${env.IMAGE}:${TAG}"
      }
    }
    stage('Smoke-Test Dev') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
    stage('Dev Approval to QA') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Deploy to QA') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Smoke-Test QA') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Regression-Test QA') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('QA Approval to UAT') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Deploy to UAT') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Smoke-Test UAT') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('BusinessDefinedTesting-Test UAT') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('UAT Approval to InactiveProd') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Deploy to InactiveProd') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Smoke-Test InactiveProd') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Manual Testing - Test InactiveProd') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Prod Update Approval') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
       stage('Prod A/B Switch') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Smoke-Test Prod') {
      agent any
      steps {
        //sample dummy step
        sh 'sleep 4'
      }
    }
      stage('Notify Slack') {
      agent any
      steps {
        //update testing liatro slack channel
        slackSend baseUrl: 'https://testingforliatro.slack.com/services/hooks/jenkins-ci/', botUser: true, channel: '#general', color: 'good', message: 'Testing', token: 'A4gc8vLxpVj3xzBJvnXxulgm'
      }
    }
  }
}

